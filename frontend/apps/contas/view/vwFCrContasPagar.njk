{% extends "templates/base.html" %}

{% block content %}
<div x-data="contaPagarForm()">
  <ol class="breadcrumb mb-3">
    <li class="breadcrumb-item active">{{ title }}</li>
  </ol>

  <div class="row justify-content-center">
    <div class="col-md-6">
    <div class="card-body">
      <form>

        <div class="col-12">
          <label for="fornecedor_id" class="form-label fw-semibold">Fornecedor</label>
          <select class="form-select" id="fornecedor_id" x-model="form.fornecedor_id" required>
            <option value="">Selecione...</option>
            {% for forn in fornecedor %}
              <option value="{{forn.id}}">{{forn.nome}}</option>
            {% endfor %}
          </select>
        </div>

        <div class="col-12">
          <label for="descricao" class="form-label fw-semibold">Descrição</label>
          <input type="text" class="form-control" id="descricao" x-model="form.descricao" required>
        </div>

        <div class="row">
          <div class="col-6">
            <label for="valor" class="form-label fw-semibold">Valor (R$)</label>
            <input type="number" step="0.01" class="form-control" id="valor" x-model="form.valor" required>
          </div>

          <div class="col-6">
            <label for="data_vencimento" class="form-label fw-semibold">Data de Vencimento</label>
            <input type="date" class="form-control" id="data_vencimento" x-model="form.data_vencimento" required>
          </div>
        </div>

        

        <div class="col-12 d-flex gap-2 mt-3">
          <button type="button" @click="insertForm()" class="btn btn-brown px-4">Salvar</button>
          <a href="/contas/manutContasPagar" class="btn btn-info px-4">Retornar</a>
        </div>
      </form>

        <template x-if="message">
          <div class="mt-3" :class="messageClass" x-text="message"></div>
        </template>
      </div>
    </div>
  </div>
</div>

<script>
  window.onload = function () {
    windowOnLoad();
    const localErro = "{{erro}}";
    if (localErro) alert("[vwContasPagar|onload] Erro do servidor: " + localErro);
    $("#descricao").focus();
  };

  function contaPagarForm() {
    return {
      form: { fornecedor_id: '', descricao: '', valor: '', data_vencimento: '', removido: false },
      message: '',
      messageClass: '',

      async insertForm() {
        try {
          const response = await fetch('/contas/insertContasPagar', {
            method: 'POST',
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify(this.form)
          });
          const result = await response.json();
          if (result.status === "ok") {
            alert("Conta a pagar cadastrada com sucesso!");
            this.resetForm();
          } else this.showError(result.status);
        } catch (error) { this.showError(error.message); }
      },

      resetForm() {
        this.form = { fornecedor_id: '', descricao: '', valor: '', data_vencimento: '', removido: false };
        this.message = ''; this.messageClass = '';
      },

      showError(msg) {
        this.message = `Erro: ${msg}`;
        this.messageClass = 'alert alert-danger';
      }
    };
  }
</script>
{% endblock %}
