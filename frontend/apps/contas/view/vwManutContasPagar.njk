{% extends "templates/base.html" %}

{% block content %}

  <ol class="breadcrumb mb-2">
    <li class="breadcrumb-item active">{{title}}</li>
  </ol>
  <div class="row">
    <div class="col-xl-12">

      <div class="card-body">
        <div class="">
          <div style="margin-bottom: 15px;">
            <a href="/contas/insertContasPagar" class="btn btn-brown">
              Inserir nova conta a pagar
            </a>
          </div>

          <div style="background-color: #e9e7dc">
            <table id="tabContasPagar" class="display" style="width:100%">
              <thead>
                <tr>
                  <th>Ação</th>
                  <th>ID</th>
                  <th>Descrição</th>
                  <th>Valor</th>
                  <th>Vencimento</th>
                  <th>Fornecedor ID</th>
                </tr>
              </thead>
              <tbody>
                {% for reg in data %}
                  <tr>
                    <td>
                      {# Link para visualização dos dados #}
                      <a href="/contas/viewContasPagar/{{ reg.id }}"  title="Visualizar">
                        <i class="fas fa-search"></i>
                      </a>

                      {# Link para atualização e remoção dos dados#}
                      <a href="/contas/UpdateContasPagar/{{ reg.id }}" title="Atualizar" style="margin-left: 10px;">
                        <i class="fas fa-pencil-alt"></i>
                      </a>
                    </td>
                    <td>{{reg.id}}</td>
                    <td>{{reg.descricao}}</td>
                    <td>{{reg.valor}}</td>
                    <td>{{reg.data_vencimento}}</td>
                    <td>{{reg.fornecedor_id}}</td>
                  </tr>
                {% endfor %}
              </tbody>
            </table>

          </div>

        </div>
      </div>
    </div>
  </div>

  <script>

    window.onload = function () {
      windowOnLoad();
      //@ Caso tenha dado erro no servidor frontEnd, ele será mostrado aqui.
      const localErro = "{{erro}}";
      if (localErro != "") {
        alert("[vwContasPagar|onload]Servidor retornou o erro:" + localErro);
      }

      new DataTable('#tabContasPagar');
    };
  </script>

{% endblock %}