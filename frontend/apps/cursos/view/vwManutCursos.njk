{% extends "templates/base.html" %}

{% block content %}

  <ol class="breadcrumb mb-2">
    <li class="breadcrumb-item active">{{title}}</li>
  </ol>
  <div class="row">
    <div class="col-xl-12">

      <div class="card-header">
        Manutenção de Cursos
      </div>

      <div class="card-body">
        <div class="">
          <div style="margin-bottom: 15px;">
            <a href="/cursos/InsertCursos" class="btn btn-primary">
              Inserir novo curso 
            </a>
          </div>

          <div style="background-color: #f8f9fa">
            <table id="tabCursos" class="display" style="width:100%">
              <thead>
                <tr>
                  <th>Ação</th> 
                  <th>Código</th>
                  <th>Descrição</th>
                  <th>Ativo</th>
                </tr>
              </thead>
              <tbody> 
                {% for reg in data %}
                  <tr>
                    <td>
                      <a href="/cursos/ViewCursos/{{ reg.cursoid }}"  title="Visualizar">
                        <i class="fas fa-search"></i>
                      </a>
                      <a href="/cursos/UpdateCursos/{{ reg.cursoid }}" title="Atualizar" style="margin-left: 10px;">
                        <i class="fas fa-pencil-alt"></i>
                      </a>
                    </td>
                    <td>{{reg.codigo}}</td>
                    <td>{{reg.descricao}}</td>
                    <td>
                        {% if reg.ativo %}
                            Sim
                        {% else %}
                            Não
                        {% endif %}
                    </td>
                  </tr>
                {% endfor %}
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script>
    window.onload = function () {
      const localErro = "{{erro}}";
      if (localErro != "") {
        alert("[vwManutCursos|onload]Servidor retornou o erro:" + localErro);
      }
      new DataTable('#tabCursos');
    };
  </script>

{% endblock %}