{% extends "templates/base.html" %}

{% block content %}
  <div x-data="fornecedorForm()">
    <ol class="breadcrumb mb-2">
      <li class="breadcrumb-item active">Cadastro de Fornecedor</li>
    </ol>

    <div class="row justify-content-center">
      <div class="col-md-6">
        <div class="card-body">
          <form>
            <div class="row">
              <div class="col-md-6">
                <label for="nome">Nome</label>
                <input type="text" class="form-control" id="nome" x-model="form.nome" required>
              </div> 

              <div class="col-md-6">
                <label for="telefone">Telefone</label>
                <input type="text" class="form-control" id="telefone" x-model="form.telefone">
              </div>
            </div>


            <div class="col-md-12">
              <label for="endereco">Endereço</label>
              <input type="text" class="form-control" id="endereco" x-model="form.endereco">
            </div>

          
            <div class="col-12 d-flex gap-2 mt-3">
              <button type="button" @click="insertForm()" class="btn btn-brown px-4">Salvar</button>
              <a href="/fornecedores/manutFornecedores" class="btn btn-info px-4">Retornar</a>
            </div>
          </form>

            <template x-if="message">
              <div class="mt-3" :class="messageClass" x-text="message"></div>
            </template>
        </div>
      </div>
    </div>
  </div>

  <script>
    function fornecedorForm() {
      return {
        form: { nome: '', telefone: '', endereco: '' },
        message: '',
        messageClass: '',

        async insertForm() {
          try {
            const response = await fetch('/fornecedores/InsertFornecedores', {
              method: 'POST',
              headers: { 'Content-Type': 'application/json' },
              body: JSON.stringify(this.form)
            });
            const result = await response.json();
            if (result.status === 'ok' || result.msg === 'ok') {
              alert('Fornecedor cadastrado com sucesso!');
              this.form = { nome: '', telefone: '', endereco: '' };
            } else {
              this.message = 'Erro ao cadastrar: ' + (result.msg || result.status);
              this.messageClass = 'alert alert-danger';
            }
          } catch (error) {
            this.message = 'Erro de conexão: ' + error.message;
            this.messageClass = 'alert alert-danger';
          }
        }
      }
    }
  </script>
{% endblock %}
